{
  "name": "app",
  "private": "true",
  "scripts": {
    "dev": "bin/dev",
    "build": "esbuild app/javascript/*.tsx --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:css": "sass ./app/assets/stylesheets/application.sass.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "rebuild": "yarn build && yarn build:css && yarn check:code",
    "tsc": "tsc --project tsconfig.json",
    "eslint": "eslint 'app/javascript/**/*.ts[x]'",
    "eslint:fix": "eslint --fix --cache 'app/javascript/**/*.ts[x]'",
    "prettier": "prettier --check 'app/javascript/**/*.ts[x]'",
    "prettier:fix": "prettier --write 'app/javascript/**/*.ts[x]'",
    "rubocop": "bundle exec rubocop",
    "rubocop:fix": "bundle exec rubocop -A",
    "check:code": "yarn rubocop && yarn prettier && yarn eslint && yarn tsc",
    "fix:code": "yarn rubocop:fix && yarn prettier:fix && yarn eslint:fix",
    "test:env": "yarn rebuild && bundle exec rails s -e test -p 5017",
    "test:backend": "bundle exec rspec --format documentation",
    "test:frontend": "jest --reporters='default'",
    "cypress": "cypress run --project ./spec",
    "cypress:open": "cypress open --project ./spec",
    "ci:test:backend": "bundle exec rspec",
    "ci:test:frontend": "jest"
  },
  "dependencies": {
    "@apollo/client": "^3.7.4",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.2.4",
    "@mui/icons-material": "^5.11.0",
    "@mui/material": "^5.11.5",
    "@rails/ujs": "^7.0.4-1",
    "crypto-js": "^4.1.1",
    "esbuild": "^0.17.0",
    "graphql": "^16.6.0",
    "moment": "^2.29.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.2",
    "sass": "^1.57.1",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@faker-js/faker": "^7.6.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/chai": "^4.3.4",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^29.4.0",
    "@types/jquery": "^3.5.16",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/rails__ujs": "^6.0.1",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-test-renderer": "^18.0.0",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "cypress": "^12.5.1",
    "eslint": "^8.32.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-data-attr": "^0.0.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.10.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-progress-bar-reporter": "^1.0.25",
    "prettier": "^2.8.3"
  }
}
